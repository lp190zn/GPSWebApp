<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Upload</servlet-name>
        <servlet-class>File.Upload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadMultimedia</servlet-name>
        <servlet-class>File.UploadMultimedia</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadTrackFileOnly</servlet-name>
        <servlet-class>File.UploadTrackFileOnly</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveTrackInfo</servlet-name>
        <servlet-class>File.SaveTrackInfo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubmitTrack</servlet-name>
        <servlet-class>File.SubmitTrack</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Upload</servlet-name>
        <url-pattern>/Logged/Upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadMultimedia</servlet-name>
        <url-pattern>/Logged/UploadMultimedia</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadTrackFileOnly</servlet-name>
        <url-pattern>/Logged/UploadTrackFileOnly</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveTrackInfo</servlet-name>
        <url-pattern>/Logged/SaveTrackInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubmitTrack</servlet-name>
        <url-pattern>/Logged/SubmitTrack</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>LoginPage.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>SessionCheck</filter-name>
        <filter-class>
            Filter.SessionCheck
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SessionCheck</filter-name>
        <url-pattern>/Logged/*</url-pattern>
    </filter-mapping>
</web-app>
